<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/input_color_aqua</item>
    </style>
    <!-- 对话框 透明样式  -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- 提示对话框 -->
    <style name="translucent_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/pop_transparent</item>
    </style>
    <style name="chatContent">
        <item name="android:textColor">@color/textcolor_gray</item>
        <item name="android:textSize">@dimen/messageTextSize</item>
    </style>
    <style name="PopBottomShow">
        <item name="android:windowEnterAnimation">@anim/info_pop_in</item>
        <item name="android:windowExitAnimation">@anim/info_pop_out</item>
    </style>
    <style name="common_split_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_split_line</item>
    </style>
    <style name="AppSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="chat_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">?inputColor</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="MOREN" >
        <item name="titleColor">@color/title_color_green</item>
        <item name="rip_bg">@drawable/rip_bg_green</item>
        <item name="input_bg">@color/input_bg_green</item>
        <item name="input_bg_white">@color/input_bg_white</item>
        <item name="inputColor">@color/input_color_green</item>
        <item name="chat_bottom_voice">@drawable/chat_bottom_voice_green</item>
        <item name="chat_bottom_send">@drawable/chat_bottom_send_green</item>
        <item name="uninputColor">@color/uninput_color_green</item>
        <item name="input_line_bg">@color/input_line_green</item>
        <item name="chat_speech_select">@drawable/chat_speech_select_green</item>
        <item name="chat_speech_unselect">@drawable/chat_speech_unselect_green</item>
        <item name="rip_icon_center">@drawable/rip_icon_center_green</item>
        <item name="diandiandian">@drawable/diandiandian_green</item>
        <item name="item_chat_l_light_bg">@drawable/item_chat_l_light_green_bg</item>
        <item name="item_chat_r_bg">@drawable/item_chat_r_green_bg</item>
        <item name="btn_bg">@drawable/btn_bg_green</item>
        <item name="btn_down">@drawable/btn_down_green</item>
        <item name="btn_middle">@drawable/btn_middle_green</item>
        <item name="item_chat_l_dark_bg">@drawable/item_chat_l_dark_green_bg</item>
        <item name="check_box_duomei">@drawable/check_box_duomei_green</item>
        <item name="set_btn_bg_message">@drawable/set_btn_green_bg</item>
        <item name="check_box_fuck">@drawable/check_box_fuck_green</item>
        <item name="check_box_more">@drawable/check_box_more_green</item>
        <item name="check_box_more_text">@drawable/check_box_more_text_green</item>
        <item name="language">@drawable/language_green</item>
        <item name="doctor_card">@drawable/doctor_card_green</item>
        <item name="doctor_card_bg">@drawable/doctor_card_bg_green</item>
        <item name="doctor_cardp_bg">@drawable/doctor_cardp_bg_green</item>
    </style>


    <style name="AQUA" >
